#include <iostream>
#include <map>
#include <string>
using namespace std;

// 주어진 텍스트에서 각 단어가 몇 번 나왔는지 계산하여 출력하세요.
int main()
{
	map<string, int> words;
	string text = "this is a test text this is a test line";
	string curWord = "";

	for (int i = 0; i < text.size(); i++)
	{
		if (text[i] != ' ')
		{
			curWord += text[i];
		}
		else
		{
			words[curWord]++;
			curWord = "";
		}
	}

	for (auto& n : words)
	{
		cout << n.first << " : " << n.second << "회" << endl;
	}
}
