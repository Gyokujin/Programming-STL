#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
#include <fstream>
using namespace std;

class Student
{
private:
    string name;
    int number;
    int grade;
    int level;

    int kor, eng, math;
    int total;
    float average;

public:
    Student(string _name, int _number, int _kor, int _eng, int _math);
    Student(string _name);
    Student();
    
    void Calculate();
    void GetStudent();
    bool operator == (string key);
};

void Student::GetStudent()
{
    cout << "학번을 입력하세요 >>";
    cin >> number;
    cout << "이름을 입력하세요 >>";
    cin >> name;
    cout << "국어 점수를 입력하세요 >>";
    cin >> kor;
    cout << "영어 점수를 입력하세요 >>";
    cin >> eng;
    cout << "수학 점수를 입력하세요 >>";
    cin >> math;
    Calculate();
}

void PrintWindow()
{

