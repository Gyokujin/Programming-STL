    cout << "메뉴 선택(1~7) >> ";
}

void Input()
{
    cout << " >> 데이터 입력 작업 <<" << endl;
}

int main()
{
    int input;
    cout << "    성적 관리 프로그램" << endl;

    while (true)
    {
        PrintWindow();
        cin >> input;

        switch (input)
        {
        case 1:
            Input();
            break;

        case 2:
            break;

        case 3:
            break;

        case 4:
            break;

        case 5:
            break;

        case 6:
            break;

        case 7:
            break;
        }
    }

    return 0;
}
